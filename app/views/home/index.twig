{% extends "_templates/base.twig" %} {% block content %}
<h2>Dashboard</h2>
<div class="row">
	<div class="col-xs-5">
		<div class="panel panel-default">
			<div class="panel-heading">Envíos pendientes</div>
			<div class="panel-body">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<td>ID</td>
							<td>Destinatario</td>
							<td>Fecha creación</td>
							<td>Estado</td>
						</tr>
					</thead>
					{% for envio in envios %}
					<tbody>
						{% if envio.ESTADO|lower == "p" %}
						<tr>
							<td>#{{ envio.ID_ENVIO }}</td>
							<td>{{
									[envio.NOMBRE,envio.APELLIDO1, envio.APELLIDO2]|join(' ') }}</td>
							<td><a
								href="{{ constant('URL') }}envios/edit/{{ envio.ID_ENVIO }}">{{
									envio.FEC_CREACION }} </a></td>
							<td><span class="label label-danger">PENDIENTE</span></td>
						</tr>
						{% endif %} {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>


	<div class="col-xs-7">
		<div class="panel panel-default">
			<div class="panel-heading">Envíos devueltos</div>
			<div class="panel-body">
				<table class="table table-bordered">
					<tr></tr>
					<tr></tr>
				</table>
			</div>
		</div>
	</div>

</div>





{% endblock %}
