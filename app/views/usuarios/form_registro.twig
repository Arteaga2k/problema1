{% extends "_templates/base.twig" %}
 {% block content %}
<div class="page-header">
	<h1>
		{{ tabla }} <small>{{ title }} </small>
	</h1>

</div>
<form
		action="{{ constant('URL') }}usuario/add_accion"
		method="POST" class="form-horizontal" role="form">
 
    <div class="control-group">
      <!-- Username -->
      <label class="control-label"  for="username">Nombre usuario</label>
      <div class="controls">
        <input type="text" id="username" name="username" placeholder="" class="input-xlarge">
        <p class="help-block">Nombre de usuario, solo puede contener letrar o numeros, sin espacios</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="email">E-mail</label>
      <div class="controls">
        <input type="text" id="email" name="email" placeholder="" class="input-xlarge">
        <p class="help-block">Introduce tu cuenta E-mail</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password_hash">Password</label>
      <div class="controls">
        <input type="password" id="password_hash" name="password_hash" placeholder="" class="input-xlarge">
        <p class="help-block">Password deber√≠a tener al menos 4 caracteres</p>
      </div>
    </div>    
 
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button type="submit" name="add_accion" class="btn btn-success">Registrarse</button>
      </div>
    </div>
</form>

{% endblock %}