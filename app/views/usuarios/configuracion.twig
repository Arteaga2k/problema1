{% extends "_templates/base.twig" %} {% block content %}

	<h1>
		{{ tabla }} <small>{{ title }} </small>
	</h1>
	<hr />


<p class="bg-primary">Paginación</p>
<form class="form-horizontal"
	action="{{ constant('URL') }}usuario/configuracion_accion" method="POST"
	class="form-horizontal" role="form">

	<div
		class="form-group {% if errores.REGS_PAG|length -%} has-error {%- endif -%}">
		<label for="REGS_PAG" class="col-sm-2 control-label">Número de
			elementos por página</label>
		<div class="col-sm-10">
			<input type="text" name="REGS_PAG" class="form-control"
				id="REGS_PAG" placeholder=""> <span>{{- errores.REGS_PAG|length ?
				errores.REGS_PAG : '' -}}</span>
		</div>
	</div>

	<p class="bg-primary">Cookies</p>

	<div
		class="form-group {% if errores.COOKIE_RUNTIME|length -%} has-error {%- endif -%}">
		<label for="COOKIE_RUNTIME" class="col-sm-2 control-label">Tiempo en
			el que expira la cookie(segundos)</label>
		<div class="col-sm-10">
			<input type="text" name="COOKIE_RUNTIME" class="form-control"
				id="COOKIE_RUNTIME" placeholder=""> <span>{{-
				errores.COOKIE_RUNTIME|length ? errores.COOKIE_RUNTIME : '' -}}</span>
		</div>
	</div>

	<p class="bg-primary">Avatar de usuario por defecto</p>

	<div
		class="form-group">
		<label for="cfg_avatar" class="col-sm-2 control-label"></label>
		<div class="radio col-sm-10">
			<label> <input type="radio" name="AVATAR" id="cfg_avatar"
				value="glyphicon glyphicon-user" > <span class="glyphicon glyphicon-user"></span> Usuario
			</label>
		</div>		
	</div>
	<div
		class="form-group ">
		<label for="cfg_avatar" class="col-sm-2 control-label"></label>
		<div class="radio col-sm-10">
			<label> <input type="radio" name="AVATAR" id="cfg_avatar"
				value="glyphicon glyphicon-send" > <span class="glyphicon glyphicon-send"></span> Avioncito
			</label>
		</div>		
	</div>
	<div
		class="form-group">
		<label for="cfg_avatar" class="col-sm-2 control-label"></label>
		<div class="radio col-sm-10">
			<label> <input type="radio" name="AVATAR" id="cfg_avatar"
				value="glyphicon glyphicon-fire" > <span class="glyphicon glyphicon-fire"></span> Llamarada
			</label>
		</div>			 
	</div>
<div class="well">
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" name="config_accion" class="btn btn-primary">Guardar</button>
			<a class="btn btn-default" href="{{ constant('URL') }}home/index/">Cancelar</a>
		</div>
	</div>
	</div>
</form>

{% endblock %}
