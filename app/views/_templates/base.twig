<!doctype html>
<html lang="es">
<head>
<meta charset="UTF-8" />
<title>Problema 3</title>

<!-- Estilos css -->
{% block stylesheets %}
<link href="{{ constant('URL') }}assets/css/bootstrap.css"
	type="text/css" rel="stylesheet" />
<link href="{{ constant('URL') }}assets/css/jquery.cleditor.css"
	type="text/css" rel="stylesheet" />
<link rel="stylesheet"
	href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
{% endblock %}



</head>
<body>


	<nav class="navbar navbar-inverse" role="navigation">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed"
					data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span> <span
						class="icon-bar"></span> <span class="icon-bar"></span> <span
						class="icon-bar"></span>
				</button>
				 <a class="navbar-brand" href="{{ constant('URL') }}home/index">
                <img alt="Brand" src="{{ constant('URL') }}assets/images/caja24.png">
      </a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse"
				id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li class="active"><a href="{{ constant('URL') }}envios/index">Envíos</a></li>
					<li><a href="{{ constant('URL') }}usuario/index">Usuarios</a></li>
					<li><a href="{{ constant('URL') }}zona/index">Zonas</a></li>
					<li class="dropdown"><a href="#" class="dropdown-toggle"
						data-toggle="dropdown" role="button" aria-expanded="false">{{
							zona_usuario }} <span class="caret"></span>
					</a>
						<ul class="dropdown-menu" role="menu">
							{% for zona in zonas %} {% if zona.nombrezona != zona_usuario %}
							<li><a
								href="{{ constant('URL') }}zona/cambiaZona/{{ zona.id_zona }}">{{
									zona.nombrezona }}</a></li> {% endif %} {% endfor %}
						</ul></li>
					<li class=""><a href="{{ constant('URL') }}usuario/configuracion">Configuración</a></li>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					<li><p class="navbar-text"><span class="glyphicon glyphicon-user"></span> Hola {{ usuario }}</p></li>
					<li><a href="{{ constant('URL') }}usuario/logout">Cerrar sesión</a></li>

				</ul>
			</div>
			<!-- /.navbar-collapse -->
		</div>
		<!-- /.container-fluid -->
	</nav>

	<div class="container-fluid">
		<!-- Contenido será rellenado por las diferentes vistas via Twig -->
		{% block content %} {% endblock %}

	</div>
	
	{% block footer %}{% endblock %}


		
	

	</div>
	{% block javascripts %}
	<script src="{{ constant('URL') }}assets/js/jquery-1.11.1.min.js"
		type="text/javascript"></script>
	<script src="{{ constant('URL') }}assets/js/bootstrap.min.js"
		type="text/javascript"></script>
	<script src="{{ constant('URL') }}assets/js/jquery.cleditor.min.js"
		type="text/javascript"></script>
	<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
	{% endblock %}
</body>
</html>

